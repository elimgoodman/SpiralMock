<html>
    <head>
        <script type="text/javascript" src="/static/js/jquery.js"></script>
        <script type="text/javascript" src="/static/js/underscore.js"></script>
        <script type="text/javascript" src="/static/js/backbone.js"></script>
        <script type="text/javascript" src="/static/js/loader.js"></script>
        <script type="text/javascript" src="/static/js/index.js"></script>
        <link rel="stylesheet" type="text/css" href="/static/css/index.css" />
    </head>
    <body>
        <ul id="concept-list"></ul>
        <hr />
        <ul id="instance-list"></ul>
        <div id="editor"></div>
        <a href="#" id="add-instance-link">Add</a>
    </body>

    <script type="text/html" id="concept-list-tmpl">
        <%= display_name %>
    </script>

    <script type="text/html" id="instance-list-tmpl">
        inst
    </script>

    <script type="text/html" id="pages-editor">
        <ul>
            <li>URL: <input class='url' name="url"/></li>
            <li>Layout: <select class="layout"></select>
            <li>Body: <textarea class='body' name="body" /></textarea></li>
        </ul>
    </script>

    <script type="text/html" id="layouts-editor">
        <ul>
            <li>Name: <input class='name'/></li>
            <li>Body: <textarea class='body'/></textarea></li>
        </ul>
    </script>

    <script type="text/html" id="partials-editor">
        <ul>
            <li>Name: <input class='name'/></li>
            <li>Body: <textarea class='body'/></textarea></li>
        </ul>
    </script>

    <script type="text/html" id="models-editor">
        <ul class="tabs">
            <li><a class="tab" href="structure">Structure</a></li>
            <li><a class="tab" href="methods">Methods</a></li>
            <li><a class="tab" href="views">Views</a></li>
        </ul>

        <div class="structure section">
            Name: <input class="name" />
            <div>
                Fields:
                <ul class="field-list">
                </ul>
                <a href='#' class="add-field-link">+ Add Field</a>
            </div>

            <li class="field-template template">
                <ul>
                    <li>Name: <input class="field-name" /></li>
                    <li>
                    Type:
                        <select>
                            <option value="int">Int</option>
                            <option value="string">String</option>
                            <option value="bool">Bool</option>
                        </select>
                    </li>
                <ul>
            </li>
        </div>

        <div class="methods section">
            <ul class="method-list">
            </ul>

            <a href='#' class="add-method-link">+ Add Method</a>

            <li class="method-template template">
                <ul>
                    <li>Name: <input class="method-name" /></li>
                    <li>
                        Params:
                        <ul class="param-list"></ul>
                        <a href="#" class="add-param-link">+ Add Param</a>
                    </li>
                    <li>Body: <textarea class="method-body"></textarea></li>
                </ul>
            </li>
        </div>
    </script>
</html>
